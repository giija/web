<style>
  .underline-scribble {
    position: relative;
    display: inline-block;
  }

  .underline-scribble::before {
    content: "";
    background-image: url("/images/line-scribble.png");
    background-repeat: no-repeat;
    background-size: 100%;
    width: 125%;
    height: 6rem;
    position: absolute;
    top: 3rem;
    left: 0;
  }

  .underline-twinkle {
    position: relative;
    display: inline-block;
  }
  .underline-twinkle::before {
    content: "";
    background-image: url("/images/line.png");
    background-repeat: no-repeat;
    background-size: 100%;
    transform: rotate(-2.5deg);
    width: 125%;
    height: 6rem;
    position: absolute;
    top: 0.5rem;
    left: 0;
  }
</style>
